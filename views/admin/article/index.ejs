<!DOCTYPE html>
<html lang="en">
  <head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">	
	<title><%= title %></title>

	<!-- Bootstrap core CSS -->
	<link rel='stylesheet' href='/public/plugin/bootstrap/css/bootstrap.min.css' />
	<link rel='stylesheet' href='/public/css/admin.css' />
	<!--[if lt IE 9]>
	  <script src="/public/plugin/html5shiv/html5shiv.min.js"></script>
	  <script src="/public/plugin/respond/respond.min.js"></script>
	<![endif]-->
  </head>
  <body>
	<%- include ../_header %>
	<div class="container bs-docs-container">
	  <div class="row">
		<div class="col-md-2">
		  <%- include ../_info_side %>
		</div>
		<div class="col-md-9 im-main" role="main">
			<table class="table table-striped">
		  		<thead>
		  			<tr>
		  				<td>文章ID</td>
		  				<td>文章标题</td>
		  				<td></td>
		  				<td>操作</td>
		  			</tr>
		  		</thead>
		  		<tbody id="categorytbody">
		  			<% for( var i in articles) {%>				    
		  			<tr data-categoryid="<%= articles[i].articleid %>" >
		  				<td><%= articles[i].articleid %></td>
		  				<td><%= articles[i].title %></td>
		  				<td></td>
		  				<td>
		  					<a href="/admin/article/edit?articleid=<%= articles[i].articleid %>">编辑</a> &nbsp;|&nbsp;
		  					<a href="/admin/article/destroy?articleid=<%= articles[i].articleid %>">删除</a>
	  					</td>
		  			</tr>
		  			<% } %>
		  		</tbody>
		  	</table>	
		</div>	   
	</div> <!-- /container -->
	<script src="/public/plugin/jquery/jquery.1.10.2.min.js"></script>
	<script src="/public/plugin/bootstrap/js/bootstrap.min.js"></script>
	<script src="/public/js/admin.js"></script>
  </body>
</html>
